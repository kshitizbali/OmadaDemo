<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Enforce HTTPS for all domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.flickr.com</domain>
        <domain includeSubdomains="true">www.flickr.com</domain>
        <domain includeSubdomains="true">live.staticflickr.com</domain>
        <domain includeSubdomains="true">staticflickr.com</domain>
    </domain-config>
</network-security-config>
